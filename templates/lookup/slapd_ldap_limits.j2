{% set disable_counter = False %}
{% if slapd_ldap_limits|d([]) and slapd_ldap_limits[0] | search("^{") %}
{% set disable_counter = True %}
{% endif %}
{% for item in slapd_ldap_limits %}
{% if disable_counter %}
  - '{{ item }}'
{% else %}
  - '{{ "{" + loop.index0 | string + "}" }}{{ item }}'
{% endif %}
{% endfor %}
